{
  "manifest_version": 3,
  "name": "Top Half Window Resizer",
  "version": "1.0",
  "description": "One-click resize of the current window to the top half of the primary display.",
  "permissions": [
    "windows",
    "system.display"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
