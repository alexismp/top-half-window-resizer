{
  "manifest_version": 3,
  "name": "Top Half Window Resizer",
  "version": "1.0",
  "description": "One-click resize of the current window to the top half of the primary display.",
  "permissions": [
    "windows",
    "system.display"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.svg",
      "48": "assets.icon48.svg",
      "128": "assets/icon128.svg"
    }
  },
  "icons": {
    "16": "assets/icon16.svg",
    "48": "assets/icon48.svg",
    "128": "assets/icon128.svg"
  }
}
